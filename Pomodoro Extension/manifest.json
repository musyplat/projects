{
    "name": "< pomodoro extension >",
    "description": "for fighting distractions when you're supposed to be locking in",
    "version": "1.0.3",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "windows",
        "offscreen"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon48x48.png"
    },
    "web_accessible_resources": [
    {
        "resources": ["alarm_beep.mp3", "sound.html", "sound.js"],
        "matches": ["<all_urls>"]
    }
  ]
}